{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  "labels": ["deps"],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["on monday"]
  },
  "packageRules": [
    { "matchManagers": ["github-actions"], "groupName": "github-actions" },
    { "matchPackageNames": ["node"], "allowedVersions": "<22" },
    { "matchPackageNames": ["@types/node"], "allowedVersions": "<21" },
    { "matchPackageNames": ["pnpm"], "enabled": false },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "ignoreDeps": ["@workspace/*"]
}
